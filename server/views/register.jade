doctype html
html
  head
    title= title
    meta(name='viewport', content='width=device-width, initial-scale=1.0')    
    link(rel='stylesheet', href='/stylesheets/skins/Slate/bootstrap.min.css')
    link(rel='stylesheet', href='/lib/bootstrap/css/bootstrap-responsive.min.css')
    link(rel='stylesheet', href='/stylesheets/register-page.css')
    script(src='/scripts/loginPage.js')
    script(src='/lib/bootstrap/dist/js/bootstrap.min.js')
  body
  .container
    .login-header
      h1 CLICK_JACKER
    br

    .registration-header.h1 Registration

    .form-container
      form(role='form', action="/register",method="post", style='max-width: 300px;')
        .form-group
            input.form-control(type='email', name="email", placeholder='Enter Email')
        .form-group
          input.form-control(type='password', name="password", placeholder='Enter Password [6-20 alphanumerics]')
        .form-group
          input.form-control(type='password', name="password_confirm", placeholder='Confirm Password', )  

        .form-button-container
          button.btn.btn-default(type='submit', class="btn btn-success") Submit          
          a.button.btn.btn-default(href="/", class='btn-danger') Cancel
  
  .status.alert-danger
    if data
      p #{data.status}