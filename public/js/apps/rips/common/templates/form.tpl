<form>
  <div class="control-group">
    <label for="rip-firstName" class="control-label">First name:</label>
    <input id="rip-firstName" name="firstName" type="text" value="<%- firstName %>"/>
  </div>
  <div class="control-group">
    <label for="rip-lastName" class="control-label">Last name:</label>
    <input id="rip-lastName" name="lastName" type="text" value="<%- lastName %>"/>
  </div>
  <div class="control-group">
    <label for="rip-phoneNumber" class="control-label">Phone number:</label>
    <input id="rip-phoneNumber" name="phoneNumber" type="text" value="<%- phoneNumber %>"/>
  </div>
  <button class="btn js-submit">Save</button>
</form>
